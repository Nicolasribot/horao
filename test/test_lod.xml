<model name="paris" driver="feature_geom">
  
  <features name="bati" driver="postgis" dbname="paris_bati" user="hme" table="bati_3d_bbox" geometry_column="geom" feature_id_column="gid" build_spatial_index="false">
  </features>
  <!-- Set this to merge geometries of each feature, i.e. one geometry per tile -->
  <merge_geometry>true</merge_geometry>
  
  <layout>
    <tile_size_factor>15.0</tile_size_factor>
    <level name="only" min_range="1000" max_range="10000" style="lod1"/>
  </layout>
  
  
  <styles>            
    <style type="text/css">
      lod1 {
      altitude-offset: 0.1;
      fill: #0000ff;
      }
    </style>
    
  </styles>
  
  <lighting>true</lighting>
  
</model> 

<model name="paris3d" driver="feature_geom">
  <features name="bati" driver="postgis" dbname="paris_bati" user="hme" table="bati_extru" geometry_column="geom" feature_id_column="gid" build_spatial_index="false">
  </features>
  <!-- Set this to merge geometries of each feature, i.e. one geometry per tile -->
  <merge_geometry>true</merge_geometry>
  
  <layout>
    <tile_size_factor>15.0</tile_size_factor>
    <level name="only" max_range="1000" style="lod2"/>
  </layout>
  
  
  <styles>            
    <style type="text/css">
      lod2 {
      altitude-offset: 0.1;
      fill: #00ffff;
      }
    </style>
    
  </styles>
  
  <lighting>true</lighting>
  
</model> 

